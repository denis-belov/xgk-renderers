{
	"variables":
	{
		"gcc-x64":
		{
			"LIBS": "/home/denis/libs",
			"REPS": "/home/denis/reps"
		}
	},

	"entries":
	{
		"type": "static",

		"name": "xgk-renderers",

		"include_directories":
		[
			"$(SRC)/glad/include",
			"$(SRC)/glslang/include",
			"$(REPS)/denis-belov"
		],

		"flags_additional": "$(STD_20) $(NO_LINK) $(VERBOSE) $(OPT_FASTX) $(SSE) $(FLAGS_ADD) -fPIC",

		"watch_files":
		[
			{
				"file": "$(SRC)/opengl/opengl.cpp",
				"watch_files": "$(SRC)/opengl/opengl.h"
			},

			{
				"file": "$(SRC)/vulkan/vulkan.cpp",
				"watch_files": "$(SRC)/vulkan/vulkan.h"
			},

			{
				"file": "$(SRC)/glad/src/glad.c",
				"flags_additional": "-w"
			},

			"$(SRC)/glslang/lib/libglslang.$(LIB_EXT)",
			"$(SRC)/glslang/lib/libglslang-default-resource-limits.$(LIB_EXT)",

			"$(SRC)/glslang/lib/libHLSL.$(LIB_EXT)",

			"$(SRC)/glslang/lib/libSPIRV.$(LIB_EXT)",
			"$(SRC)/glslang/lib/libSPIRV-Tools-opt.$(LIB_EXT)",
			"$(SRC)/glslang/lib/libSPIRV-Tools.$(LIB_EXT)",
			"$(SRC)/glslang/lib/libSPVRemapper.$(LIB_EXT)",

			"$(SRC)/glslang/lib/libMachineIndependent.$(LIB_EXT)",
			"$(SRC)/glslang/lib/libOSDependent.$(LIB_EXT)",
			"$(SRC)/glslang/lib/libOGLCompiler.$(LIB_EXT)",

			"$(SRC)/glslang/lib/libGenericCodeGen.$(LIB_EXT)",

			"$(SRC)/glfw/glfw-3.3.5/build/src/libglfw3.$(LIB_EXT)"
		]
	}
}
